/* ======================================== >>>>> */
/* = UI Components = */
/* ======================================== >>>>> */

.ui {

	/* ----- Button ----- */

	&.button {
		@include general-transition;
	}

	/* ----- Navigation ----- */

	&.navigation {
		.menu-item-has-children {
			& > .sub-menu {
				display: none;
			}

			&.opened {
				& > .sub-menu {
					display: block;
				}
			}
		}
	}

	/* ----- Tabs ----- */

	&.tabs {
		.navigation-tabs {
			.navigation-tab {
				&.active {

				}
			}
		}

		.content-tabs {
			.content-tab {
				display: none;

				&.active {
					display: block;
				}
			}
		}
	}

}
