@import "../libs/bootstrap/bootstrap.min.css";
@import "helpers.styl";
@import "variables.styl";

/* ======================================== >>>>> */
/* = General styles = */
/* ======================================== >>>>> */

* {
	outline: none !important;
}

html {
	overflow-x: hidden;

	&.overlay {
		overflow: hidden;
	}
}

body {
	font-family: sans-serif;
}

a {
	text-decoration: none;

	&:hover, &:focus, &:active {
		text-decoration: none;
	}
}

ul {
	list-style: none;
	padding: 0;
	margin: 0;
}

